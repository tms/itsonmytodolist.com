extends layout

block prepend title
  | #{ page.title + " - "}

block content
  article.article
    header
      time= moment.utc(page.date).format(locals.date_format)
      h2
        a(href=page.url)= page.title
    section.content!= typogr(page.html).typogrify()

block prepend footer
  nav(role="navigation").subnav
    a(href=contents.index.url)
      i.fa.fa-home
      | home